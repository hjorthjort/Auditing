#!/bin/bash

set -exo pipefail

USE_SQUASH=0

ARCHIVE_DIR="Archived"
REMOTE_PREFIX="audit-remote-"
TMP_REMOTE_PREFIX="audit-local-"

mkdir -p "$ARCHIVE_DIR"

function usage() {
    cat <<EOF
Usage:
  ./audit add <name> <git-url> [branch] [options] Add a new repo as a subtree
  ./audit pull <name> [branch] [options]          Pull updates into the subtree
  ./audit archive <path> <client>                 Move the subtree at <path> into Archived/<client>/
  ./audit unarchive <name>                        Move Archived/<name> back to top-level
  ./audit migrate <from path> <to path> [options] Migrate a local repo as a subtree
  ./audit list                                    List all audit remotes
  ./audit delete <name>                           Delete audit project and remote
  ./audit help                                    Show this help

options:
  --squash   Squash commit history
EOF
}

function parse_flags() {
    for arg in "$@"; do
        if [ "$arg" == "--squash" ]; then
            USE_SQUASH=1
        fi
    done
}

function audit_add() {
    NAME="$1"
    URL="$2"
    BRANCH="${3:-main}"
    REMOTE="${REMOTE_PREFIX}${NAME}"
    PREFIX="${NAME}"

    git remote add "$REMOTE" "$URL" || {
        echo "Remote $REMOTE already exists."
    }

    ARGS=()
    if [ "$USE_SQUASH" -eq 1 ]; then
        ARGS+=(--squash)
    fi

    git fetch "$REMOTE"
    git subtree add --prefix="$PREFIX" "$REMOTE" "$BRANCH" "${ARGS[@]}"
    echo "âœ… Added $NAME -> $PREFIX"
}

function audit_pull() {
    NAME="$1"
    BRANCH="${2:-main}"
    REMOTE="${REMOTE_PREFIX}${NAME}"
    PREFIX="${NAME}"

    ARGS=()
    if [ "$USE_SQUASH" -eq 1 ]; then
        ARGS+=(--squash)
    fi

    git fetch "$REMOTE"
    git subtree pull --prefix="$PREFIX" "$REMOTE" "$BRANCH" "${ARGS[@]}"
    echo "ðŸ”„ Pulled latest into $PREFIX"
}

function audit_archive() {
    NAME="$1"
    CLIENT="$2"
    SRC="${NAME}"
    CLIENT_DIR=${ARCHIVE_DIR}/${CLIENT}
    DEST="${CLIENT_DIR}/${NAME}"

    if [ ! -d "$SRC" ]; then
        echo "âŒ Cannot archive: directory $SRC does not exist."
        exit 1
    fi

    if [ ! -d "$CLIENT_DIR" ]; then
        mkdir -p "$CLIENT_DIR"
        echo "âœ… Created new client dir $CLIENT_DIR"
    fi

    mkdir -p "$ARCHIVE_DIR"
    git mv "$SRC" "$DEST"
    git commit -m "ðŸ“¦ Archived $NAME â†’ $DEST"

    echo "âœ… Archived $NAME â†’ $DEST"
}

function audit_unarchive() {
    NAME="$1"
    SRC="${ARCHIVE_DIR}/${NAME}"
    DEST="${NAME}"

    if [ ! -d "$SRC" ]; then
        echo "âŒ Cannot unarchive: directory $SRC does not exist."
        exit 1
    fi

    if [ -d "$DEST" ]; then
        echo "âŒ Cannot unarchive: destination $DEST already exists."
        exit 1
    fi

    git mv "$SRC" "$DEST"
    git commit -m "â™»ï¸ Unarchived $NAME â†’ $DEST"
    echo "âœ… Unarchived $NAME â†’ $DEST"
}

function audit_migrate() {
    FROM_PATH="$1"
    TO_PATH="$2"
    ABS_FROM="$(cd "$FROM_PATH"; pwd)"
    MONOREPO_ROOT="$(cd "$(dirname "$0")"; pwd)"

    if [ ! -d "$ABS_FROM/.git" ]; then
        echo "âŒ $ABS_FROM is not a git repository."
        exit 1
    fi

    NAME="$(basename "$TO_PATH")"
    REMOTE="${REMOTE_PREFIX}${NAME}"

    cd "$MONOREPO_ROOT"

    if ! git remote get-url "$REMOTE" > /dev/null 2>&1; then
        git remote add "$REMOTE" "$ABS_FROM"
        echo "ðŸ”— Added remote $REMOTE â†’ $ABS_FROM"
    else
        echo "â„¹ï¸ Remote $REMOTE already exists."
    fi

    git fetch "$REMOTE"

    # Robust branch detection
    BRANCH=$(git --git-dir="$ABS_FROM/.git" --work-tree="$ABS_FROM" rev-parse --abbrev-ref HEAD 2>/dev/null)
    BRANCH=${BRANCH:-main}

    ARGS=()
    if [ "$USE_SQUASH" -eq 1 ]; then
        ARGS+=(--squash)
    fi

    git subtree add --prefix="$TO_PATH" "$REMOTE" "$BRANCH" "${ARGS[@]}"
    echo "ðŸšš Migrated $ABS_FROM â†’ $TO_PATH using branch $BRANCH"
}

function audit_delete() {
    NAME="$1"
    PATH_TO_DELETE="$NAME"
    REMOTE="${REMOTE_PREFIX}${NAME}"

    if [ ! -d "$PATH_TO_DELETE" ]; then
        echo "âŒ Cannot delete: $PATH_TO_DELETE does not exist."
        exit 1
    fi

    git rm -r "$PATH_TO_DELETE"
    git commit -m "ðŸ—‘ï¸ Removed audit $NAME"

    if git remote get-url "$REMOTE" > /dev/null 2>&1; then
        git remote remove "$REMOTE"
        echo "ðŸ§¹ Removed remote $REMOTE"
    fi

    echo "âœ… Deleted audit $NAME"
}

function audit_list() {
    echo "ðŸ“¦ Audit remotes:"
    git remote -v | grep "$REMOTE_PREFIX" || echo "None yet."
}

# Parse args
CMD="$1"
shift || true

case "$CMD" in
    add)
        audit_add "$@"
        ;;
    pull)
        audit_pull "$@"
        ;;
    archive)
        audit_archive "$@"
        ;;
    unarchive)
        audit_unarchive "$@"
        ;;
    migrate)
        audit_migrate "$@"
        ;;
    list)
        audit_list
        ;;
    delete)
        audit_delete "$@"
        ;;
    help|--help|-h)
        usage
        ;;
    *)
        echo "Unknown command: $CMD"
        usage
        exit 1
        ;;
esac

